@model IEnumerable<Go_Parking.Models.ApplicationUser>

@{
    ViewBag.Title = "Funcionários";
}

<div class="boxPagina">
    <h2>Funcionários</h2>

    <p>        
        
        <a  href="@Url.Action("Cadastrar", "Funcionario")"      class="btn btn-primary">
            <span class="glyphicon glyphicon-plus "></span> Cadastrar Funcionário  
        </a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Ações
            </th>
           
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
               
                <td>
                    @Html.ActionLink(" ", "Editar", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success " })
                    @Html.ActionLink(" ", "Detalhes", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-search btn btn-warning " })
                    @Html.ActionLink(" ", "Deletar", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger " })
                </td>
            </tr>
        }

    </table>
</div>
