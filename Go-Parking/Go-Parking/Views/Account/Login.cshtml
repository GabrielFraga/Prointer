@model Go_Parking.Models.LoginViewModel


@{
    Layout = "~/Views/Shared/_LoginStart.cshtml";
}



<div class="modal show  modal-overlay modal-fundo" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:650px">
        <div class="modal-content" style="margin: 70px 100px">
            <div class="modal-header">
                <h2 class="text-center">GoParking :)</h2>
                <h4 class="text-center">Por favor, digite o seu usuário e senha.</h4>
            </div>
            <div class="modal-body text-center">

                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form xl-12", role = "form" }))
                    {
                        <div class="col-xl-12">

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="form-group" style="padding-left:60px">

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-xl-12 ", @style = "width:100%", @placeholder = "E-mail" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group" style="padding-left:60px">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "width:100%", @placeholder = "Senha" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group" style="padding-left:60px">
                                <div>
                                    <input type="submit" value="Entrar" class="btn btn-padrao" />
                                </div>
                            </div>
                            <div style="margin-top:50px">
                                <p>@Html.ActionLink("Esqueceu sua senha?", "ForgotPassword")</p>
                                <p>@Html.ActionLink("Registrar uma nova conta!", "Register")</p>
                            </div>
                        </div>
                    }
                            
                </section>        


            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}