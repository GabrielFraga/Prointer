@model Go_Parking.Models.VagaReservasViewModel

<div class="modal show modal-overlay" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" >
                <h3 class="text-center">Deseja desocupar a vaga  @ViewBag.NomeVaga ?</h3>              
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.UsuarioNome)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UsuarioNome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Entrada)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Entrada.DateTime)
                    </dd> 

                    <dt>
                        @Html.DisplayNameFor(model => model.Saida)
                    </dt>               
                             
                    <dd>
                        @Html.DisplayFor(model => model.Saida.DateTime)
                    </dd>                 
                  
                </dl>
                <div class="col-md-12" style="margin-bottom:20px;">
                        <a href="@Url.Action("Index", "Vagas")">
                            <input type="submit" value="Cancelar" name="Cancelar" class="btn btn-cancelar pull-left" />
                        </a>
                    @using (Html.BeginForm("_LiberarVaga", "Vagas", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit"  value="Confirmar" class="btn btn-reservar btn-primary pull-right" />
                    }
                    </div>
            </div>
        </div>
    </div>
</div>