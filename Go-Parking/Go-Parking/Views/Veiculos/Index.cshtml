@model IEnumerable<Go_Parking.Models.Veiculo>


<head>

    @{
        /**/

        if (TempData["SemVeiculo"] != null)
        {
            <script type="text/javascript">
                alert("Você ainda não cadastrou seu veículo");
            </script>
        }
    }
</head>

<body>


    <div class="boxPagina">
        <h2>Veículos</h2>

        <p>

            <a href="@Url.Action("Cadastrar", "Veiculos")" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus "></span> Cadastrar Veiculo
            </a>
        </p>
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Cor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    <p>Ações</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Cor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Editar", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success " })
                        @Html.ActionLink(" ", "Detalhes", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-search btn btn-warning" })
                        @Html.ActionLink(" ", "Deletar", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>
 
