@model Go_Parking.Models.FazerReserva

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script type="text/javascript" src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/moment-with-locales.js"></script>
    <script type="text/javascript" src="~/Scripts/moment-with-locales.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="~/Content/search-bar.css" />
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                locale: 'pt-br',
                useCurrent: 'hour',
                minDate: moment(),
                sideBySide: true,
                format: 'D/MM/YYYY',
                enabledHours: [9, 10, 11, 12, 13, 14, 15, 16]
            });
            $('#datetimepicker2').datetimepicker({
                locale: 'pt-br',
                minDate: moment(),
                sideBySide: true,
                format: 'D/MM/YYYY',
                enabledHours: [9, 10, 11, 12, 13, 14, 15, 16]
            });


        });

        jQuery(function () {
            jQuery('#Reservar').on('submit', checkRadio);
        })

        function checkRadio() {
            var isChecked = jQuery("input[name=Vagas]:checked").val();

            var booleanVlaueIsChecked = false;
            if (!isChecked) {
                booleanVlaueIsChecked = true;
                alert('Selecione uma vaga!');
                return false;
            }
        }

        
       jQuery(function () {
            jQuery('#Reservar').on('submit', validarData);
        })

        function validarData() {
            entrada = $('#ListaEntrada :selected').text();
            saida = $('#ListaSaida :selected').text();
            var diff = parseFloat(saida) - parseFloat(entrada);

            var booleanVlaueIsChecked = false;
            if (diff <= 0) {
                booleanVlaueIsChecked = true;
                alert("Tempo de reserva inválido. Por favor, Tente novamente.");
                return false;
            }
        }
    </script>    
</head>
<body>


@using (Html.BeginForm("Index", "Reservas", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "Reservar", name = "Reservar" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12 middlebar">
        <div class="col-md-7">
            <h4 class="text-center"> Defina o intervalo de reserva</h4> <br />
            <div class="col-md-5">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Entrada, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class='input-group date' id='datetimepicker1' name="Entrada">
                        @Html.EditorFor(model => model.Entrada, new { htmlAttributes = new { @class = "form-control", @style = "width:90%"} })
                        @Html.ValidationMessageFor(model => model.Entrada, "", new { @class = "text-danger" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Saida, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class='input-group date' id='datetimepicker2' name="Saida" oninput="validarData(this)">
                        @Html.EditorFor(model => model.Saida, new { htmlAttributes = new { @class = "form-control", @style = "width:90%"} })
                        @Html.ValidationMessageFor(model => model.Saida, "", new { @class = "text-danger" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
           <div class="col-md-5"> 
                <div class="form-group">
                    <label style="font-weight:bold" class="control-label col-md-2">Hora:</label>
                    @Html.DropDownList("ListaEntrada", new SelectList(ViewBag.ListaHorarios, "Value", "Text"), new { @class = "form-control", @Id = "ListaEntrada", @name="ListaEntrada"})
                </div>
            <div class="form-group">
                <label style="font-weight:bold" class="control-label col-md-2">Hora:</label>
                @Html.DropDownList("ListaSaida", new SelectList(ViewBag.ListaHorarios, "Value", "Text"), new { @class = "form-control", @Id = "ListaSaida", @name ="ListaSaida"})
            </div>
           </div> 
        </div>

            <div class="col-md-3">
                <h4 class="text-center">Selecione o veículo</h4> <br />
                <div class="col-xs-12">
                    <div class="form group ">
                        @Html.LabelFor(model => model.Veiculos, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("Veiculos", Model.Veiculos, new { @class = "form-control " })
                        </div>
                    </div>
                </div>
            </div>
        </div> 

    <div class="col-xs-12" id="ListaVagas">
        <div class="form group">
            @{
                foreach (var vaga in Model.Vagas)
                {
                    <div class="col-md-4">
                        <div class="vaga">
                            <h4 class="text-center"> @Html.Label(vaga.Nome)</h4>
                            <div class="col-md-6">
                                <label class="container">
                                    @Html.RadioButtonFor(model => model.Vagas, vaga.Id, new { @class = "radio" })
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                        </div>
                    </div>
                }
            }

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Reservar" name="Reservar" class="btn-reservar btn-primary pull-right" />
        </div>
    </div>

                }
    </body>
</html>
