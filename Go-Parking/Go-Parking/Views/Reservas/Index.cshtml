@model Go_Parking.Models.FazerReserva

<head>
    <script type="text/javascript" src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/moment-with-locales.js"></script>
    <script type="text/javascript" src="~/Scripts/moment-with-locales.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="~/Content/search-bar.css"/>

</head>



@using (Html.BeginForm("Index", "Reservas", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12 col-xl-12 middlebar">
        <div class="col-xs-6">
            <h4 class="text-center"> Defina o intervalo de reserva</h4> <br />
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Entrada, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class='input-group date' id='datetimepicker1' style="width:70%">
                    @Html.EditorFor(model => model.Entrada, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Entrada, "", new { @class = "text-danger" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Saida, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class='input-group date' id='datetimepicker2' style="width:70%">
                    @Html.EditorFor(model => model.Saida, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Saida, "", new { @class = "text-danger" })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-xs-5">
            <h4 class="text-center">Selecione o veículo</h4> <br />
            <div class="col-xs-12">
                <div class="form group ">
                    @Html.LabelFor(model => model.Veiculos, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Veiculos", Model.Veiculos, new { @class = "form-control " })
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-xs-12">

        <div class="form group">
    @{
        foreach (var vaga in Model.Vagas)
        {
            <div class="col-md-4">
                <div class="vaga">
                   <h4 class="text-center"> @Html.Label(vaga.Nome)</h4>
                        <div class="col-md-6">
                            <label class="container">
                                @Html.RadioButtonFor(model => model.Vagas, vaga.Id, new { @class = "radio" })
                                <span class="checkmark"></span>
                            </label>
                        </div>                        
                 </div>          
        </div>           
        }
    }

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Reservar" class="btn-reservar btn-primary pull-right" />
        </div>
    </div>


    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                locale: 'pt-br',
                useCurrent: 'hour',
                minDate: moment(),
                sideBySide: true,
                format: 'dddd, D [de] MMMM [de] YYYY - HH:00',
                enabledHours: [9, 10, 11, 12, 13, 14, 15, 16]
            });
            $('#datetimepicker2').datetimepicker({
                locale: 'pt-br',
                minDate: moment(),
                sideBySide: true,
                format: 'dddd, D [de] MMMM [de] YYYY - HH:00',
                enabledHours: [9, 10, 11, 12, 13, 14, 15, 16]
            });
        });
    </script>
}
