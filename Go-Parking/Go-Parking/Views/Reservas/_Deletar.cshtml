
@model Go_Parking.Models.Reserva

@{
    ViewBag.Title = "Deletar";
}

<div class="modal show modal-overlay" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">               

                <h3 class="text-center">Deseja cancelar esta reserva?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Entrada)
                        </dt>

                        <dd>
                            @ViewBag.Entrada
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Saida)
                        </dt>

                        <dd>
                            @ViewBag.Saida
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.FormaPagamento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FormaPagamento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Valor)
                        </dt>

                        <dd>
                            R$@Html.DisplayFor(model => model.Valor),00
                        </dd>
                    </dl>
                    <div class="col-md-12" style="margin-bottom:20px;">
                        <a href="@Url.Action("Index", "Vagas")">
                            <input type="submit" value="Cancelar" name="Cancelar" class="btn btn-cancelar pull-left" />
                        </a>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <input type="submit" value="Confirmar" class="btn btn-reservar btn-primary pull-right" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>