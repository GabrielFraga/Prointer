</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(".", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn" }) 
            @Html.ActionLink(".", "Details", new { id=item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-search btn" }) 
            @Html.ActionLink(".", "Delete", new { id=item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn" })
        </td>
    </tr>
}

</table>
