@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-success" }) 
